.percentageBar
  position absolute
  top 40px
  right 0px
  left 0px
  background-color #DADFE1
  width 100%
  height: 15px
  font-size: 12px
  z-index 100
  border-radius 2px

.progressBar
  background-color: #6C7A89
  height 15px
  border-radius 2px
  transition 0.3s

.percentageText
  color #f4f4f4
  padding: 2px 43%

body[data-theme="dark"]
  .percentageBar
    background-color #363A3D

  .progressBar
    background-color: alpha(#939395, 50%)

  .percentageText
    color $ui-dark-text-color