.control-tocButton
  position relative
  topBarButtonRight()
  &:hover .tooltip
    opacity 1

.tooltip
  tooltip()
  position absolute
  pointer-events none
  bottom 0px
  left 50%
  transform translate(-50%, 100%)
  white-space no-wrap
  z-index 200
  padding 5px
  line-height normal
  border-radius 2px
  opacity 0
  transition 0.1s

.tocButton
  padding 0px

body[data-theme="dark"]
  .control-tocButton
    topBarButtonDark()
