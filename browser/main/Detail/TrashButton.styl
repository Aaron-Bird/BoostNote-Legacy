.control-trashButton
  position relative
  topBarButtonRight()
  &:hover .tooltip
    opacity 1

.tooltip
  tooltip()
  position absolute
  pointer-events none
  bottom 0px
  left 50%
  transform translate(-50%, 100%)
  white-space nowrap
  z-index 200
  padding 5px
  line-height normal
  border-radius 2px
  opacity 0
  transition 0.1s

.tooltip:lang(ja)
  @extend .tooltip
  right 46px

.control-trashButton--in-trash
  top 60px
  topBarButtonRight()

.trashButton
  padding 0px

body[data-theme="dark"]
  .control-trashButton
    topBarButtonDark()
