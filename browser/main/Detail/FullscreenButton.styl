.control-fullScreenButton
  position relative
  topBarButtonRight()
  &:hover .tooltip
    opacity 1

.tooltip
  tooltip()
  position absolute
  pointer-events none
  bottom 0px
  left 50%
  transform translate(-50%, 100%)
  z-index 200
  padding 5px
  line-height normal
  border-radius 2px
  opacity 0
  transition 0.1s

.tooltip:lang(ja)
  @extend .tooltip
  right 35px

body[data-theme="dark"]
  .control-fullScreenButton
    topBarButtonDark()